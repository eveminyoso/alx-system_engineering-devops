#!/bin/bash

BASE_DIR="/var/run/myscript"
mkdir -p "$BASE_DIR"

# Function to handle cleanup and termination
cleanup() {
    echo "Cleaning up and terminating..."
    rm -rf "$BASE_DIR"
    exit 0
}

# Function to handle SIGTERM signal
sigterm_handler() {
    echo "I hate the kill command"
}

# Function to handle SIGINT signal
sigint_handler() {
    echo "Y U no love me?!"
}

# Trap signals and call respective handlers
trap 'cleanup' EXIT
trap 'cleanup' SIGQUIT
trap 'sigterm_handler' SIGTERM
trap 'sigint_handler' SIGINT

# Run 100 processes in the background
for i in {1..100}; do
    PID_FILE="$BASE_DIR/process_$i.pid"
    echo $$ > "$PID_FILE"
    echo "PID $i stored in $PID_FILE"
    (sleep 10; echo "Process $i completed") &
done

# Display messages indefinitely
echo "To infinity and beyond..."
while true; do
    sleep 1
done
